{
  "name": "notifica-frete",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun dev:api\" \"bun dev:web\"",
    "dev:api": "cd apps/api && bun --hot src/index.ts",
    "dev:web": "cd apps/web && bun run dev",
    "build": "bun build:api && bun build:web",
    "build:api": "cd apps/api && bun run build",
    "build:web": "cd apps/web && bun run build",
    "test": "bun test:api && bun test:web",
    "test:api": "cd apps/api && bun test",
    "test:web": "cd apps/web && bun test"
  },
  "devDependencies": {
    "@types/node-cron": "^3.0.11",
    "concurrently": "^9.2.1",
    "typescript": "latest"
  },
  "dependencies": {
    "node-cron": "^4.2.1"
  }
}
