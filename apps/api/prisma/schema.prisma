generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
}

model Carga {
  id             String           @id @default(cuid())
  viagem         String           @unique
  tipoTransporte String
  origem         String
  destino        String
  produto        String
  equipamento    String
  prevColeta     String
  qtdeEntregas   String
  vrFrete        String
  termino        String
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  status         String           @default("ACTIVE")
  historico      CargaHistorico[]

  @@index([viagem])
  @@index([createdAt])
  @@index([status])
}

model CargaHistorico {
  id             String   @id @default(cuid())
  cargaId        String
  viagem         String
  tipoTransporte String
  origem         String
  destino        String
  produto        String
  equipamento    String
  prevColeta     String
  qtdeEntregas   String
  vrFrete        String
  termino        String
  changeType     String
  changedAt      DateTime @default(now())
  status         String   @default("ACTIVE")
  carga          Carga    @relation(fields: [cargaId], references: [id], onDelete: Cascade)

  @@index([cargaId])
  @@index([viagem])
  @@index([changedAt])
}

model ScraperLog {
  id          String   @id @default(cuid())
  level       String
  message     String
  context     String?
  error       String?
  executionId String?
  timestamp   DateTime @default(now())

  @@index([level])
  @@index([executionId])
  @@index([timestamp])
}

model PageView {
  id        String   @id @default(cuid())
  page      String
  sessionId String?
  userAgent String?
  timestamp DateTime @default(now())

  @@index([page, timestamp])
  @@index([timestamp])
}
